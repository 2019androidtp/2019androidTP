<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CenterActivity">

    <LinearLayout
        android:id="@+id/mapviewCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical">
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nameOfLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시1발"
                android:textSize="20pt" />

            <TextView
                android:id="@+id/nameOfAddress"
                android:layout_width="192dp"
                android:layout_height="68dp"
                android:layout_below="@id/nameOfLocation"
                android:textSize="10pt" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/underLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/findInfraBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="11dp"
                android:text="부대시설 확인하기" />

        </RelativeLayout>
    </FrameLayout>

</LinearLayout>