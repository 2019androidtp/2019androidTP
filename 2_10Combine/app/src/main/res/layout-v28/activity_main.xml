<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:targetApi="21"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/black"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:src="@color/black" />

        <ImageView
            android:id="@+id/whitelogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/logo36" />


        <TextView
            android:layout_width="228dp"
            android:layout_height="80dp"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="120dp"
            android:lineSpacingExtra="6sp"

            android:textColor="#ffffff"
            android:textSize="24sp"
            tools:text="중간 지점을 찾기 위한
                위치를 입력해주세요" />

        <EditText
            android:id="@+id/nameA"
            style="@style/ButtonWhite"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/radiusblack"
            android:text="이름 입력"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/nameB"
            style="@style/ButtonWhite"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/radiusblack"
            android:text="이름 입력"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/nameC"
            style="@style/ButtonWhite"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/radiusblack"
            android:text="이름 입력"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/searchBtn"
            style="@style/Search"
            android:layout_width="220dp"
            android:layout_height="36dp"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/radiuswhite"
            android:text="주소 입력" />

        <Button
            android:id="@+id/searchBtn2"
            style="@style/Search"
            android:layout_width="220dp"
            android:layout_height="36dp"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/radiuswhite"
            android:text="주소 입력" />

        <Button
            android:id="@+id/searchBtn3"
            style="@style/Search"
            android:layout_width="220dp"
            android:layout_height="36dp"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/radiuswhite"
            android:text="주소 입력" />

        <ImageButton
            android:id="@+id/DeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="344dp"
            android:layout_marginLeft="344dp"
            android:layout_marginTop="250dp"
            android:background="#00000000"
            android:src="@drawable/delete" />





        <ImageButton
            android:id="@+id/DeleteButton2"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="344dp"
            android:layout_marginLeft="344dp"
            android:layout_marginTop="300dp"
            android:background="#00000000"
            android:src="@drawable/delete" />


        <ImageButton
            android:id="@+id/DeleteButton3"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="344dp"
            android:layout_marginLeft="344dp"
            android:layout_marginTop="350dp"
            android:background="#00000000"
            android:src="@drawable/delete" />

        <Button
            android:id="@+id/toggleButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="invisible" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="666dp"
            android:contentDescription="OrangeBottomBar"
            android:src="@color/orange" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="666dp"
            android:gravity="center_vertical|center_horizontal"
            android:lineSpacingExtra="6sp"
            style="@style/SearchResult"
            android:textColor="#ffffff"
            android:textSize="24sp"
            tools:text="중간 지점 찾기" />

        <Button
            android:id="@+id/BlackBarButton"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginTop="666dp"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/AddButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="400dp"
            android:background="#00000000"
            android:src="@drawable/addpeople" />

        <TextView
            android:layout_width="91dp"
            android:layout_height="38dp"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="400dp"
            android:gravity="center_vertical|center_horizontal"
            android:lineSpacingExtra="6sp"
            style="@style/SearchResult"
            android:textColor="#ffffff"
            android:textSize="16sp"
            tools:text="인원 추가" />

    </FrameLayout>


</LinearLayout>